<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE table SYSTEM "http://sources.jungle.net/svn/dtd/table-config-1.0.dtd">

<table sqlname="commodity">
	<!-- 不需要配置的列请删除 -->
	
	<sql id="Commodity.columns">
		id, code, name, price, unit, weight, description, gmt_create, gmt_modified, create_by, modify_by 
	</sql>
	
	<operation name="insert" paramtype="object">
		<sql>
			INSERT INTO commodity (
	        	id ,code ,name ,price ,unit ,weight ,description ,gmt_create ,gmt_modified ,create_by ,modify_by 
	        ) VALUES (
	        	? ,? ,? ,? ,? ,? ,? ,? ,? ,? ,?         
	        )
		</sql>		
	</operation>

	<operation name="delete">
		<sql>
	        DELETE FROM commodity WHERE
	        id = ? 
		</sql>
	</operation>
	
	<operation name="update" paramtype="object">
		<sql>
	        UPDATE commodity SET
		        code = ? ,name = ? ,price = ? ,unit = ? ,weight = ? ,description = ? ,gmt_create = ? ,gmt_modified = ? ,create_by = ? ,modify_by = ? 
	        WHERE 
	        	id = ? 
		</sql>					
	</operation>

	<operation name="queryById" multiplicity="one">
		<sql>
	    	SELECT
		    <include refid="Commodity.columns"/>
	        FROM commodity 
	        WHERE 
		        id = ? 
		</sql>
	</operation>

	
	<operation name="findPage" multiplicity="paging">
		<sql>
			SELECT 
			<include refid="Commodity.columns"/>
			FROM commodity 
		</sql>
	</operation>

</table>
