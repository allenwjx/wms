<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE table SYSTEM "http://sources.jungle.net/svn/dtd/table-config-1.0.dtd">

<table sqlname="authorization">
	<!-- 不需要配置的列请删除 -->
	
	<sql id="Authorization.columns">
		id, name, code, path, gmt_create, gmt_modifeid, create_by, modify_by 
	</sql>
	
	<operation name="insert" paramtype="object">
		<sql>
			INSERT INTO authorization (
	        	id ,name ,code ,path ,gmt_create ,gmt_modifeid ,create_by ,modify_by 
	        ) VALUES (
	        	? ,? ,? ,? ,? ,? ,? ,?         
	        )
		</sql>		
	</operation>

	<operation name="delete">
		<sql>
	        DELETE FROM authorization WHERE
	        id = ? 
		</sql>
	</operation>
	
	<operation name="update" paramtype="object">
		<sql>
	        UPDATE authorization SET
		        name = ? ,code = ? ,path = ? ,gmt_create = ? ,gmt_modifeid = ? ,create_by = ? ,modify_by = ? 
	        WHERE 
	        	id = ? 
		</sql>					
	</operation>

	<operation name="queryById" multiplicity="one">
		<sql>
	    	SELECT
		    <include refid="Authorization.columns"/>
	        FROM authorization 
	        WHERE 
		        id = ? 
		</sql>
	</operation>

	
	<operation name="findPage" multiplicity="paging">
		<sql>
			SELECT 
			<include refid="Authorization.columns"/>
			FROM authorization 
		</sql>
	</operation>

</table>
