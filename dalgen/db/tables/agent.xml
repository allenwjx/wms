<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE table SYSTEM "http://sources.jungle.net/svn/dtd/table-config-1.0.dtd">

<table sqlname="agent">
	<!-- 不需要配置的列请删除 -->
	
	<sql id="Agent.columns">
		id, code, external_code, name, mobile, address 
	</sql>
	
	<operation name="insert" paramtype="object">
		<sql>
			INSERT INTO agent (
	        	id ,code ,external_code ,name ,mobile ,address 
	        ) VALUES (
	        	? ,? ,? ,? ,? ,?         
	        )
		</sql>		
	</operation>

	<operation name="delete">
		<sql>
	        DELETE FROM agent WHERE
	        id = ? 
		</sql>
	</operation>
	
	<operation name="update" paramtype="object">
		<sql>
	        UPDATE agent SET
		        code = ? ,external_code = ? ,name = ? ,mobile = ? ,address = ? 
	        WHERE 
	        	id = ? 
		</sql>					
	</operation>

	<operation name="queryById" multiplicity="one">
		<sql>
	    	SELECT
		    <include refid="Agent.columns"/>
	        FROM agent 
	        WHERE 
		        id = ? 
		</sql>
	</operation>

	
	<operation name="findPage" multiplicity="paging">
		<sql>
			SELECT 
			<include refid="Agent.columns"/>
			FROM agent 
		</sql>
	</operation>

</table>
