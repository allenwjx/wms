<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE table SYSTEM "http://sources.jungle.net/svn/dtd/table-config-1.0.dtd">

<table sqlname="qrcode">
	<!-- 不需要配置的列请删除 -->
	
	<sql id="Qrcode.columns">
		id, serial_no, commodity_id, data, gmt_create, gmt_modified, create_by, modified_by 
	</sql>
	
	<operation name="insert" paramtype="object">
		<sql>
			INSERT INTO qrcode (
	        	id ,serial_no ,commodity_id ,data ,gmt_create ,gmt_modified ,create_by ,modified_by 
	        ) VALUES (
	        	? ,? ,? ,? ,? ,? ,? ,?         
	        )
		</sql>		
	</operation>

	<operation name="delete">
		<sql>
	        DELETE FROM qrcode WHERE
	        id = ? 
		</sql>
	</operation>
	
	<operation name="update" paramtype="object">
		<sql>
	        UPDATE qrcode SET
		        serial_no = ? ,commodity_id = ? ,data = ? ,gmt_create = ? ,gmt_modified = ? ,create_by = ? ,modified_by = ? 
	        WHERE 
	        	id = ? 
		</sql>					
	</operation>

	<operation name="queryById" multiplicity="one">
		<sql>
	    	SELECT
		    <include refid="Qrcode.columns"/>
	        FROM qrcode 
	        WHERE 
		        id = ? 
		</sql>
	</operation>

	
	<operation name="findPage" multiplicity="paging">
		<sql>
			SELECT 
			<include refid="Qrcode.columns"/>
			FROM qrcode 
		</sql>
	</operation>

</table>
