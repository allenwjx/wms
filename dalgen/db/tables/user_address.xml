<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE table SYSTEM "http://sources.jungle.net/svn/dtd/table-config-1.0.dtd">

<table sqlname="user_address">
	<!-- 不需要配置的列请删除 -->
	
	<sql id="UserAddres.columns">
		id, name, tel, zip_code, province, city, region, detail, address_type, user_id, default_setting, gmt_create, gmt_modified, create_by, modify_by 
	</sql>
	
	<operation name="insert" paramtype="object">
		<sql>
			INSERT INTO user_address (
	        	id ,name ,tel ,zip_code ,province ,city ,region ,detail ,address_type ,user_id ,default_setting ,gmt_create ,gmt_modified ,create_by ,modify_by 
	        ) VALUES (
	        	? ,? ,? ,? ,? ,? ,? ,? ,? ,? ,? ,? ,? ,? ,?         
	        )
		</sql>		
	</operation>

	<operation name="delete">
		<sql>
	        DELETE FROM user_address WHERE
	        id = ? 
		</sql>
	</operation>
	
	<operation name="update" paramtype="object">
		<sql>
	        UPDATE user_address SET
		        name = ? ,tel = ? ,zip_code = ? ,province = ? ,city = ? ,region = ? ,detail = ? ,address_type = ? ,user_id = ? ,default_setting = ? ,gmt_create = ? ,gmt_modified = ? ,create_by = ? ,modify_by = ? 
	        WHERE 
	        	id = ? 
		</sql>					
	</operation>

	<operation name="queryById" multiplicity="one">
		<sql>
	    	SELECT
		    <include refid="UserAddres.columns"/>
	        FROM user_address 
	        WHERE 
		        id = ? 
		</sql>
	</operation>

	
	<operation name="findPage" multiplicity="paging">
		<sql>
			SELECT 
			<include refid="UserAddres.columns"/>
			FROM user_address 
		</sql>
	</operation>

</table>
