<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap>

    
    <resultMap id="RM.User" class="com.zeh.wms.dal.dataobject.UserDO">
		<result property="id" column="id" javaType="long" jdbcType="BIGINT"  nullValue="0"  />
		<result property="nickName" column="nick_name" javaType="java.lang.String" jdbcType="VARCHAR"  />
		<result property="userId" column="user_id" javaType="java.lang.String" jdbcType="VARCHAR"  />
		<result property="password" column="password" javaType="java.lang.String" jdbcType="VARCHAR"  />
		<result property="openId" column="open_id" javaType="java.lang.String" jdbcType="VARCHAR"  />
		<result property="gmtCreate" column="gmt_create" javaType="java.util.Date" jdbcType="TIMESTAMP"  />
		<result property="gmtModified" column="gmt_modified" javaType="java.util.Date" jdbcType="TIMESTAMP"  />
		<result property="createBy" column="create_by" javaType="java.lang.String" jdbcType="VARCHAR"  />
		<result property="modifyBy" column="modify_by" javaType="java.lang.String" jdbcType="VARCHAR"  />
		<result property="type" column="type" javaType="java.lang.String" jdbcType="VARCHAR"  />
    </resultMap>
    
	<sql id="User.columns">
		id, nick_name, user_id, password, open_id, gmt_create, gmt_modified, create_by, modify_by, type
	</sql>
		

	
	
    
	<insert id="wms.User.insert">
		INSERT INTO user (
	        	id ,nick_name ,user_id ,password ,open_id ,gmt_create ,gmt_modified ,create_by ,modify_by ,type 
	        ) VALUES (#id#,#nickName#,#userId#,#password#,#openId#,#gmtCreate#,#gmtModified#,#createBy#,#modifyBy#,#type#)
		<selectKey resultClass="long" type="post" keyProperty="id" >
            select last_insert_id()
    	</selectKey>        
	</insert>
	
	
	<delete id="wms.User.delete">
		DELETE FROM user WHERE
	        id = #id#
    </delete>
    
	
	<update id="wms.User.update">
		UPDATE user SET
		        nick_name = #nickName# ,user_id = #userId# ,password = #password# ,open_id = #openId# ,gmt_create = #gmtCreate# ,gmt_modified = #gmtModified# ,create_by = #createBy# ,modify_by = #modifyBy# ,type = #type# 
	        WHERE 
	        	id = #id#
	</update>
	
    
	
	<select id="wms.User.queryById" resultMap="RM.User" >
    	SELECT
 /*wms.User.queryById*/ 		    <include refid="User.columns"/>
	        FROM user 
	        WHERE 
		        id = #id#
	</select>	

	    
	
	
    
	
	<select id="wms.User.findPage" resultMap="RM.User" >
    	SELECT  /*wms.User.findPage*/ 
			<include refid="User.columns"/>
			FROM user
			limit #offset#,#limit#
	</select>	

	<select id="wms.User.findPage.count" resultClass="long" >
    	select  /*wms.User.findPage.count*/ count(*) 	FROM user
	</select>
	    
	
	
    

</sqlMap>

