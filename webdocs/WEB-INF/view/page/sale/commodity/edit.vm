#set($layout="layout/spa.vm")
## Title
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title" id="myModalLabel">商品维护</h4>
</div>

## Form
<form id="modalForm" class="form-horizontal">
    <input type="hidden" id="id" value="$!{id}">
    <div class="modal-body container-fluid ">
        <div class="form-group" v-if="model.id">
            <label class="col-sm-3 control-label" for="type">编码</label>
            <div class="col-sm-6">
                <input class="form-control" id="code" name="code" type="text" v-model.trim="model.code" :disabled="true"/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label" for="type">厂商</label>
            <div class="col-sm-6">
                <vue-select :options="manufacturers" :model.sync="model.manufacturerId" :configs="{placeholder:'请选择'}"></vue-select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label" for="type">名称</label>
            <div class="col-sm-6">
                <input class="form-control" id="name" name="name" type="text" v-model.trim="model.name"/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label" for="type">单价</label>
            <div class="col-sm-6">
                <input class="form-control" id="price" name="price" type="text" v-model.trim="model.price" placeholder="单位：元"/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label" for="type">单位</label>
            <div class="col-sm-6">
                <input class="form-control" id="unit" name="unit" type="text" v-model.trim="model.unit" placeholder="件/箱/桶 ..."/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label" for="type">重量</label>
            <div class="col-sm-6">
                <input class="form-control" id="weight" name="weight" type="text" v-model.trim="model.weight" placeholder="单位：千克"/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label" for="type">商品简介</label>
            <div class="col-sm-6">
                <input class="form-control" id="description" name="description" type="text" v-model.trim="model.description"/>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button id="dialog-submit" type="button" @click.prevent="submitData" class="btn blue">保存</button>
        <button id="dialog-cancel" type="button" class="btn btn-warning" data-dismiss="modal">取消</button>
    </div>
</form>
<script type="text/javascript" src="${rc.contextPath}/js/wms/sale/commodity/edit.js"></script>