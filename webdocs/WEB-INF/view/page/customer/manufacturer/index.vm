<div id="manufacturer">
    <div class="portlet light">
        <div class="portlet-title">
            <div class="caption font-green">
                <i class="icon-settings font-green"></i>
                <span class="caption-subject bold uppercase">厂商信息</span>
            </div>
        </div>
        <div class="portlet-body form small">
            <form action="#" class="form-horizontal">
                <div class="form-body">
                    <div class="row">
                        <div class="col-lg-3 col-md-6">
                            <div class="form-group">
                                <label class="control-label col-md-4">厂商编号</label>
                                <div class="col-md-8">
                                    <input class="form-control" id="code" name="code" type="text" v-model.trim="queryForm.code"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <div class="form-group">
                                <label class="control-label col-md-4">厂商名称</label>
                                <div class="col-md-8">
                                    <input class="form-control" id="name" name="name" type="text" v-model.trim="queryForm.name"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <div class="form-group">
                                <label class="control-label col-md-4">结算方式</label>
                                <div class="col-md-8">
                                    <vue-select :options="settleTypes" :model.sync="queryForm.settleType" :configs="{placeholder:'全部'}"></vue-select>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <div class="form-group">
                                <label class="control-label col-md-4">派件公司</label>
                                <div class="col-md-8">
                                    <vue-select :options="expresses" :model.sync="queryForm.express" :configs="{placeholder:'全部'}"></vue-select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-actions">
                    <div class="button-group" align="center">
                        <button type="button" class="btn green-meadow" v-on:click="preQuery"><i class="fa fa-search"></i>搜索</button>
                        <button type="button" class="btn default" v-on:click="create"><i class="fa fa-plus"></i>新增</button>
                        <button type="button" class="btn" v-on:click="reset"><i class="fa fa-refresh"></i>重置</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <table id="table" class="table table-bordered table-hover table-striped">
        <thead>
        <tr>
            <th>ID</th>
            <th>编号</th>
            <th>名称</th>
            <th>结算方式</th>
            <th>派件公司</th>
            <th>创建时间</th>
            <th>修改时间</th>
            <th>创建人</th>
            <th>修改人</th>
            <th>操作</th>
        </tr>
        </thead>
        <tbody>
        <tr v-cloak v-for="item in pageResult.data">
            <td v-html="item.id"></td>
            <td v-html="item.code"></td>
            <td v-html="item.name"></td>
            <td v-html="item.settleType | enumFormat settleTypes"></td>
            <td v-html="item.express | enumFormat expresses"></td>
            <td v-html="item.gmtCreate | toDate 'YYYY-MM-DD HH:mm'"></td>
            <td v-html="item.gmtModified | toDate 'YYYY-MM-DD HH:mm'"></td>
            <td v-html="item.createBy"></td>
            <td v-html="item.modifyBy"></td>
            <td>
                <a class="a-icon" v-on:click="edit(item.id)"><i class="fa fa-edit"></i>编辑</a>
            </td>
        </tr>
        </tbody>
        <tfoot>
        <tr>
            <td colspan="100">
                <vue-page :paginator="pageResult.paginator" :size="10" :query="query"></vue-page>
            </td>
        </tr>
        </tfoot>
    </table>
</div>
<div id="formModal" class="modal fade modal-scroll" tabindex="-1" data-replace="true">
    <div class="modal-dialog" role="document" style="width:1200px">
        <div class="modal-content">

        </div>
    </div>
</div>
<script type="text/javascript">
    var settleTypes = $!{settleTypes};
    var expresses = $!{expresses};
</script>
<script type="text/javascript" src="${rc.contextPath}/js/wms/customer/manufacturer/index.js"></script>