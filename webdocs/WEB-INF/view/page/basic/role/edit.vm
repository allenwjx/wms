#set($layout="layout/spa.vm")
## Title
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title" id="myModalLabel">角色维护</h4>
</div>

## Form
<form id="modalForm" class="form-horizontal">
    <input type="hidden" id="id" value="$!{id}">
    <div class="modal-body container-fluid ">
        <div class="form-group">
            <label class="col-sm-2 control-label" for="type">名称</label>
            <div class="col-sm-8">
                <input class="form-control" id="name" name="name" type="text" v-model.trim="model.name"/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">权限</label>
            <div class="col-sm-8">
                <vue-select id="authorizations" name="authorizations" :options="authorizations" :model.sync="model.authorizations" :configs="applyTransferConfig" :transfer="true"
                            :multiple="true" :infoText="false"></vue-select>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button id="dialog-submit" type="button" @click.prevent="submitData" class="btn blue">保存</button>
        <button id="dialog-cancel" type="button" class="btn btn-warning" data-dismiss="modal">取消</button>
    </div>
</form>
<script type="text/javascript" src="${rc.contextPath}/js/wms/basic/role/edit.js"></script>